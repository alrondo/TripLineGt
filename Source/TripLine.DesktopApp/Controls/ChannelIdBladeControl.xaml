<UserControl x:Class="TLine.DpSystem.Ui.Configuration.Core.Controls.ChannelIdBladeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Channel Id:" FontWeight="Bold" FontSize="14" Grid.Column="0" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding ChannelId}" FontWeight="Bold" FontSize="14" Grid.Column="1" Margin="0,5,0,0">
        </TextBlock> 
    </Grid>

</UserControl>
